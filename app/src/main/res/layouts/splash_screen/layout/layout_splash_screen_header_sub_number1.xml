<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <!--android:background="@drawable/custom_home_header_sub"-->
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp">

        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
            android:id="@+id/txtIndices"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_4sdp"
            android:singleLine="true"
            android:text="@string/indexes"
            android:textSize="@dimen/_10sdp" />

        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
            android:id="@+id/txtLast"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/_4sdp"
            android:singleLine="true"
            android:text="@string/last"
            android:textSize="@dimen/_10sdp" />

        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
            android:id="@+id/txtChange"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/_4sdp"
            android:singleLine="true"
            android:text="@string/change"
            android:textSize="@dimen/_10sdp" />

        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
            android:id="@+id/txtQty"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/_4sdp"
            android:singleLine="true"
            android:text="@string/value_bil"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
</layout>