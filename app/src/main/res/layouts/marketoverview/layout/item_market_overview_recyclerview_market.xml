<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contentview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp">

            <!--                android:background="@drawable/bg_item_recyclerview_market"-->
            <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                android:id="@+id/textview_marketName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="HNXIndex"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/textview_marketLastPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="0"
                android:textSize="@dimen/_11sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/textview_marketChange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="0"
                android:textSize="@dimen/_11sdp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal">

                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                    android:id="@+id/textview_marketValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="0"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:id="@+id/imageChecked"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:padding="@dimen/_4sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_star_border_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray" />

    </LinearLayout>
</layout>