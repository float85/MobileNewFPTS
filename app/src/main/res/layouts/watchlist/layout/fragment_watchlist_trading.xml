<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/contentview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:orientation="vertical">
            <!--phần dữ liệu hiển thị chung-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_icon"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:padding="@dimen/_4sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_up_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|left"
                                android:orientation="horizontal">


                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                    android:id="@+id/textview_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="@dimen/_16sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                    android:id="@+id/textview_change"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="%"
                                    android:textSize="@dimen/_16sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="GDKL:"
                                    android:textSize="@dimen/_14sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                    android:id="@+id/textview_volumn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="@dimen/_14sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="GDTT:"
                                    android:textSize="@dimen/_14sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                    android:id="@+id/textview_qty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="@dimen/_14sdp" />
                            </LinearLayout>

                            <!--Phần thông tin giá-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_ceiling"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_ref"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_floor"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_foreign_buy"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_weight="1.5"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_ceiling"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="@color/purple"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_ref"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="@color/orange"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_floor"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                            android:id="@+id/textview_buy"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_open"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_highest"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_lowest"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_foreign_sell"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_weight="1.5"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_open"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_highest"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_lowest"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                            android:id="@+id/textview_sell"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />
            <!--Phần mua bán-->
            <LinearLayout
                android:id="@+id/linear_layout_title_buy_sell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="6.5"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1">

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                            android:id="@+id/txtSMrkTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:maxLines="1"
                            android:text="@string/watchlist_detail_bestbuy"
                            android:textSize="@dimen/_11sdp" />

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                            android:id="@+id/txtBVolTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:text="@string/watchlist_detail_bestseller"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@color/gray" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@color/gray" />
                </LinearLayout>
                <!--PHần mua bán-->
                <LinearLayout
                    android:id="@+id/linear_layout_buy_sell"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <include layout="@layout/item_watchlist_detail_buy_sell" />

                    <include layout="@layout/item_watchlist_detail_buy_sell" />

                    <include layout="@layout/item_watchlist_detail_buy_sell" />
                </LinearLayout>
            </LinearLayout>
            <!--horizontal progressbar-->
            <LinearLayout
                android:id="@+id/linear_layout_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                    android:id="@+id/txtSellPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />

                <ProgressBar
                    android:id="@+id/determinateBar"
                    style="@style/HorizontalProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:progress="50" />

                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                    android:id="@+id/txtBuyPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>
            <!--thông tin chung -->
            <LinearLayout
                android:id="@+id/linear_layout_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/item_watchlist_trading_recyclerview_layout" />

                <include layout="@layout/item_watchlist_trading_recyclerview_layout" />

                <include layout="@layout/item_watchlist_trading_recyclerview_layout" />

                <include layout="@layout/item_watchlist_trading_recyclerview_layout" />

                <include layout="@layout/item_watchlist_trading_recyclerview_layout" />

                <include layout="@layout/item_watchlist_trading_recyclerview_layout" />
            </LinearLayout>
            <!--Đồ thị-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout_header_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone">

                    <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                        android:id="@+id/txtTitleHeader_chart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/market_overview_trading_chart"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/imageview_detail_chart"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_home_icon_imageview"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/menu_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                            android:id="@+id/tab_chart_one_day"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item_menu_tab_select"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="1D" />

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                            android:id="@+id/tab_chart_one_week"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_item_menu_tab"
                            android:gravity="center"
                            android:text="1W" />

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                            android:id="@+id/tab_chart_one_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1M" />

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                            android:id="@+id/tab_chart_one_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1Y" />

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                            android:id="@+id/tab_chart_five_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5Y" />

                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                            android:id="@+id/tab_chart_max"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Max" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        android:layout_below="@+id/menu_tab"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.github.mikephil.charting.charts.CandleStickChart
                                android:id="@+id/candle_stick"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/line_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/barchart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--Tin công bố-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout_header_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                        android:id="@+id/txtTitleHeader_news"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/watchlist_detail_news"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/imageview_detail_news"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_home_icon_imageview"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
            </LinearLayout>
            <!--Phân tích-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout_header_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                        android:id="@+id/txtTitleHeader_analysis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/watchlist_detail_analysis"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/imageview_detail_analysis"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_home_icon_imageview"
