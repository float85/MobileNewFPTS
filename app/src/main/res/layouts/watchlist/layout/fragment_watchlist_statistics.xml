<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--phần dữ liệu hiển thị chung-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--phần dữ liệu hiển thị chung-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_icon"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:padding="@dimen/_4sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_up_green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|left"
                                android:orientation="horizontal">


                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                    android:id="@+id/textview_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="@dimen/_16sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                    android:id="@+id/textview_change"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="%"
                                    android:textSize="@dimen/_16sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="GDKL:"
                                    android:textSize="@dimen/_14sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                    android:id="@+id/textview_volumn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="@dimen/_14sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_8sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="GDTT:"
                                    android:textSize="@dimen/_14sdp" />

                                <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                    android:id="@+id/textview_qty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="@dimen/_14sdp" />
                            </LinearLayout>

                            <!--Phần thông tin giá-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_ceiling"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_ref"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_floor"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_foreign_buy"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_weight="1.5"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_ceiling"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="@color/purple"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_ref"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="@color/orange"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_floor"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                            android:id="@+id/textview_buy"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_open"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_highest"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_trading_lowest"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="@string/market_overview_foreign_sell"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_weight="1.5"
                                        android:orientation="vertical">

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_open"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_highest"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                                            android:id="@+id/textview_lowest"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />

                                        <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                                            android:id="@+id/textview_sell"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:text="0"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>
            <!--Thống kê giá-->
            <LinearLayout
                android:id="@+id/linear_layout_header_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                    android:id="@+id/txtTitleHeader_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="THỐNG KÊ GIÁ"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/imageview_detail_price"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/bg_home_icon_imageview"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </LinearLayout>
            <!--Thống kê đặt lệnh-->
            <LinearLayout
                android:id="@+id/linear_layout_header_placing_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                    android:id="@+id/txtTitleHeader_placing_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="THỐNG KÊ ĐẶT LỆNH"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/imageview_detail_placing_order"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/bg_home_icon_imageview"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </LinearLayout>

            <!--Thống kê nhà đầu tư nước ngoài-->
            <LinearLayout
                android:id="@+id/linear_layout_header_ownership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                    android:id="@+id/txtTitleHeader_ownership"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="THỐNG KÊ NDT NƯỚC NGOÀI"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/imageview_detail_ownership"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/bg_home_icon_imageview"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
