<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                android:id="@+id/txtBuyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_button_sell"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="@string/watchlist_detail_sell"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/txtBuyMrkValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/_11sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/txtBuyVolValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/txtSellVolValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/_11sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/txtSellMrkValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/_11sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFontBold
                android:id="@+id/txtSellTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_button_buy"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="@string/watchlist_detail_buy"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>
    </LinearLayout>
</layout>