<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_header_world"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            android:background="@color/Grey"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/tv_title_chiso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.7"
                android:text="Chỉ số"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/tv_title_gia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right|center"
                android:text="Giá"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/tv_title_thaydoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center"
                android:text="Thay Đổi"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <mobile.fpts.com.ezmibile.util.custormView.TextViewFont
                android:id="@+id/tv_title_thaydoi_ptram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right|center"
                android:text="Thay Đổi %"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_world_indeces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_progress_world"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</layout>